@model product.Models.Product
@{ ViewData["Title"] = "Create"; }



<h1>Create</h1>

<h4>Products</h4>
<hr />


<form asp-action="@((Model.Id == 0) ? "Create" : "Edit")">

    <div class="form-group">



        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Color" class="control-label"></label>
            <input asp-for="Color" class="form-control" />
            <span asp-validation-for="Color" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProductCategory"></label>
            <select asp-for="ProductCategory" asp-items="@Model.ProductCategories">
                <option value="" select-disabled>Select category</option>

            </select>

            <span asp-validation-for="ProductCategory" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</form>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
